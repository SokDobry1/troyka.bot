    <key type="s" name="btn-focused-hover-minimize">
      <default>'/usr/share/gnome-applets/window-buttons-applet/themes/default/minimize-focused-hover.png'</default>
    </key>
    <key type="s" name="btn-focused-hover-maximize">
      <default>'/usr/share/gnome-applets/window-buttons-applet/themes/default/maximize-focused-hover.png'</default>
    </key>
    <key type="s" name="btn-focused-hover-unmaximize">
      <default>'/usr/share/gnome-applets/window-buttons-applet/themes/default/unmaximize-focused-hover.png'</default>
    </key>
    <key type="s" name="btn-unfocused-normal-close">
      <default>'/usr/share/gnome-applets/window-buttons-applet/themes/default/close-unfocused-normal.png'</default>
    </key>
    <key type="s" name="btn-unfocused-normal-minimize">
      <default>'/usr/share/gnome-applets/window-buttons-applet/themes/default/minimize-unfocused-normal.png'</default>
    </key>
    <key type="s" name="btn-unfocused-normal-maximize">
      <default>'/usr/share/gnome-applets/window-buttons-applet/themes/default/maximize-unfocused-normal.png'</default>
    </key>
    <key type="s" name="btn-unfocused-normal-unmaximize">
      <default>'/usr/share/gnome-applets/window-buttons-applet/themes/default/unmaximize-unfocused-normal.png'</default>
    </key>
    <key type="s" name="btn-unfocused-clicked-close">
      <default>'/usr/share/gnome-applets/window-buttons-applet/themes/default/close-unfocused-clicked.png'</default>
    </key>
    <key type="s" name="btn-unfocused-clicked-minimize">
      <default>'/usr/share/gnome-applets/window-buttons-applet/themes/default/minimize-unfocused-clicked.png'</default>
    </key>
    <key type="s" name="btn-unfocused-clicked-maximize">
      <default>'/usr/share/gnome-applets/window-buttons-applet/themes/default/maximize-unfocused-clicked.png'</default>
    </key>
    <key type="s" name="btn-unfocused-clicked-unmaximize">
      <default>'/usr/share/gnome-applets/window-buttons-applet/themes/default/unmaximize-unfocused-clicked.png'</default>
    </key>
    <key type="s" name="btn-unfocused-hover-close">
      <default>'/usr/share/gnome-applets/window-buttons-applet/themes/default/close-unfocused-hover.png'</default>
    </key>
    <key type="s" name="btn-unfocused-hover-minimize">
      <default>'/usr/share/gnome-applets/window-buttons-applet/themes/default/minimize-unfocused-hover.png'</default>
    </key>
    <key type="s" name="btn-unfocused-hover-maximize">
      <default>'/usr/share/gnome-applets/window-buttons-applet/themes/default/maximize-unfocused-normal.png'</default>
    </key>
    <key type="s" name="btn-unfocused-hover-unmaximize">
      <default>'/usr/share/gnome-applets/window-buttons-applet/themes/default/unmaximize-unfocused-hover.png'</default>
    </key>
    <key type="b" name="use-metacity-layout">
      <default>true</default>
      <summary>Determines whether we use custom or Metacity's button layout</summary>
      <description>When disabled, this applet's button_layout string will be used to order the buttons.</description>
    </key>
    <key type="s" name="button-layout">
      <default>'minimize,maximize,close'</default>
      <summary>Layout of buttons.</summary>
      <description>Essentially a copy from Metacity's button_layout, but we can modify it for custom settings.</description>
    </key>
    <key type="s" name="theme">
      <default>'default'</default>
      <summary>Button theme</summary>
      <description>Name of a folder located in windowapplets/themes/ or "custom".</description>
    </key>
    <key type="i" name="orientation">
      <default>0</default>
      <summary>Button orientation</summary>
      <description>May be used to set a static button orientation. Setting this value to 1 will ensure the buttons are always displayed horizontally. Setting it to 2 will do the same but vertically. The default setting 0 will set it automatically according to the panel.</description>
    </key>
    <key type="b" name="button-minimize-hidden">
      <default>false</default>
    </key>
    <key type="b" name="button-maximize-hidden">
      <default>false</default>
    </key>
    <key type="b" name="button-close-hidden">
      <default>false</default>
    </key>
    <key type="b" name="hide-on-unmaximized">
      <default>false</default>
      <summary>Hides buttons when there are no windows present.</summary>
      <description>When enabled, the buttons will disappear when there are no maximized (or active) windows on the screen.</description>
    </key>
    <key type="b" name="only-maximized">
      <default>true</default>
      <summary>Only control maximized windows.</summary>
      <description>When enabled, the window buttons will always control the upper-most maximized window.</description>
    </key>
    <key type="b" name="reverse-order">
      <default>false</default>
      <summary>Reverse the buttons placement.</summary>
      <description>When enabled, the window buttons will be placed in reverse order (right to left instead of left to right, or bottom to top instead of top to bottom).</description>
    </key>
    <key type="b" name="click-effect">
      <default>true</default>
      <summary>Enable click effect.</summary>
      <description>When enabled, the button will change image to 'clicked' whenever it is clicked.</description>
    </key>
    <key type="b" name="hover-effect">
      <default>true</default>
      <summary>Enable hover effect.</summary>
      <description>When enabled, the button will change image to 'hovered' whenever the mouse passes it.</description>
    </key>
    <key type="b" name="show-tooltips">
      <default>false</default>
      <summary>Show tooltips on buttons.</summary>
      <description>When enabled, each button will display its own tooltip, describing the function that it represents.</description>
    </key>
  </schema>
</schemalist>